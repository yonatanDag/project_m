<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.example.View.TechTaskController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../myTech.png" />
         </image>
      </ImageView>
      <Label text="This is your Tasks list for tomorrow">
         <font>
            <Font name="Bodoni MT Bold Italic" size="18.0" />
         </font>
      </Label>
   </children>
</VBox>
