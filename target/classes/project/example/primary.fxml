<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.example.PrimaryController">
   <children>
      <Label text="The list of tasks for each technician">
         <font>
            <Font name="Calisto MT Bold" size="13.0" />
         </font></Label>
      <TableView fx:id="scheduleTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="technicianColumn" prefWidth="75.0" text="Technician" />
          <TableColumn fx:id="taskColumn" prefWidth="75.0" text="Tasks" />
        </columns>
      </TableView>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
